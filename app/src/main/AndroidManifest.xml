<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.freddybear.joaovitor.leads">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_list_white_48dp"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_list_white_48dp"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".CadastroActivity"
            android:label="@string/title_activity_cadastro"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".EntrevistadoEditar"
            android:label="@string/title_activity_entrevistado_editar"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>