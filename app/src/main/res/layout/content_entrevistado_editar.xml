<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.freddybear.joaovitor.leads.EntrevistadoEditar"
    tools:showIn="@layout/activity_entrevistado_editar">


    <TextView
        android:id="@+id/txtNomeEdt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/lbl_nome"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtNomeEdt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:hint="Nome"
        android:inputType="textPersonName"
        android:maxLength="80"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/txtNomeEdt"
        app:layout_constraintRight_toRightOf="@+id/txtNomeEdt"
        app:layout_constraintTop_toBottomOf="@+id/txtNomeEdt" />

    <TextView
        android:id="@+id/txtTelefoneEdt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="16dp"
        android:text="@string/lbl_Telefone"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/edtNomeEdt"
        app:layout_constraintRight_toRightOf="@+id/edtNomeEdt"
        app:layout_constraintTop_toBottomOf="@+id/edtNomeEdt" />

    <EditText
        android:id="@+id/edtTelefoneEdt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:hint="41988889999"
        android:inputType="phone"
        android:maxLength="11"
        app:layout_constraintLeft_toLeftOf="@+id/txtTelefoneEdt"
        app:layout_constraintRight_toRightOf="@+id/txtTelefoneEdt"
        app:layout_constraintTop_toBottomOf="@+id/txtTelefoneEdt" />

</android.support.constraint.ConstraintLayout>
